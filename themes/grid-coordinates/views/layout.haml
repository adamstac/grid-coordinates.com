!!!
%html{html_attrs}
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/grid-coordinates/css/application.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
  %body{ :class => @body_class }
    #grid
    %header#header
      %hgroup
        %h1
          %a{:href => "/"}= @heading
        %h2= @subtitle
    %section#main
    %footer#footer
      %p Copyright &copy; 2010 - 2011