!!!
%html{html_attrs}
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/grid-coordinates/css/demo.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"}
    %script{:src => "/grid-coordinates/javascript/demo.js"}
  %body{ :class => @body_class }
    #header
      #branding
        %p Branding
      #navigation
        %p Navigation
    #page
      #page-body
        %p Body
      #page-sidebar
        %p Sidebar
    #footer
      #footer-content
        %p Footer